modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["mongodb"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Restaurant Bot Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MongoDB Server"

[[workflows.workflow]]
name = "Restaurant Bot Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npm install express mongoose cors && node app.js"
waitForPort = 5000

[[workflows.workflow]]
name = "MongoDB Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p /tmp/mongodb_data && mongod --dbpath /tmp/mongodb_data --port 27017 --bind_ip 127.0.0.1 --logpath /tmp/mongodb.log"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80
